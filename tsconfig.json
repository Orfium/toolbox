{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "es5", "es6", "es7", "es2017"],
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "jsxImportSource": "react",
    "declarationDir": "./dist/types"
  },
  "include": ["./src/*", "./src/**/*"],
  "exclude": [
    "**/node_modules/**/",
    "node_modules",
    "build",
    "dist",
    "scripts",
    "typeDocs",
    "documentation",
    "server",
    "**/storyUtils",
    "**/__snapshots__",
    "**/*.stories.tsx",
    "**/*.stories.mdx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "__mocks__",
    "./jest.config.js"
  ]
}
