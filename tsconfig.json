{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "jsxImportSource": "react"
  },
  "include": ["src", "setup-jest.ts"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "typeDocs",
    "documentation",
    "server",
    "**/storyUtils",
    "**/__snapshots__",
    "**/*.stories.tsx",
    "**/*.stories.mdx",
    "__mocks__",
    "./jest.config.cjs",
    "**/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
